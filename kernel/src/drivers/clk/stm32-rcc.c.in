    iowrite32(RCC_BASE_ADDR + RCC_CR_REG, rcc_cr);

    return iopoll32_until_set(RCC_BASE_ADDR + RCC_CR_REG, RCC_CR_HSERDY, HSE_STARTUP_TIMEOUT);
}

